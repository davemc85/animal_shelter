<h2>Edit <%= @animal.name %> the <%= @animal.type %></h2>


<form class="" action="/animals/<%=@animal.id%>" method="post">


  <div class="">
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="<%= @animal.name %>"/>
  </div>

  <div class="">
    <label for="admission_date">Admission Date: </label>
    <input type="text" name="admission_date" id="admission_date" value="<%= @animal.admission_date %>"/>
  </div>

  <div class="">
    <label for="type">Type: </label>
    <input type="text" name="type" id="type" value="<%= @animal.type %>"/>
  </div>

  <div class="">
    <label for="breed">Breed: </label>
    <input type="text" name="breed" id="breed" value="<%= @animal.breed %>"/>
  </div>

  <div class="">
    <label for="age">Age: </label>
    <input type="number" name="age" id="age" value="<%= @animal.age %>"/>
  </div>

<table>
  <tr>
    <th></th>
    <th>Yes</th>
    <th>No</th>
  </tr>
  <tr>
    <td><label for="child_friendly">Is the animal child friendly? </label></td>
    <td><input type="radio" name="child_friendly" value="true"></td>
    <td><input type="radio" name="child_friendly" value="false"></td>
  </tr>
  <tr>
    <td><label for="needs_outside_space">Does the animal need space outside? </label></td>
    <td><input type="radio" name="needs_outside_space" value="true"></td>
    <td><input type="radio" name="needs_outside_space" value="false"></td>
  </tr>
  <tr>
    <td><label for="needs_exercise">Does the animal require plenty of exercise? </label></td>
    <td><input type="radio" name="needs_exercise" value="true"></td>
    <td><input type="radio" name="needs_exercise" value="false"></td>
  </tr>
</table>

<div class="">
  <label for="profile_pic">Profile picture URL: </label>
  <input type="text" name="profile_pic" id="profile_pic" value="<%= @animal.profile_pic %>"/>
</div>

<div class="">
  <label>
  Select current owner:
    <select name="owner_id">
      <option value="<%= @animal.owner_id%>">Please update current owner...</option>
      <% for owner in @owners %>
      <option value="<%= owner.id %>"><%= owner.full_name %></option>
      <% end %>
    </select>
  </label>
</div>

<div class="">
  <label for="status">Status: </label>
  <select name="status" id="status">
    <option value="<%= @animal.status%>">Please update...</option>
    <option value="available">Available</option>
    <option value="in training">Currently in training</option>
    <option value="in vet care">Currently in vet care</option>
    <option value="adopted">Adopted</option>
  </select>
</div>



  <div class="">
    <input type="submit" value="Confirm changes"/>
  </div>

  <div class="">
    <a href="/animals/<%= @animal.id %>">Cancel</a>

  </div>


</form>
