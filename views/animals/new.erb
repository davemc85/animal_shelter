<h1>Add a new animal</h1>

<form class="form-wrapper" action="/animals" method="post">


  <div class="form">
    <label for="name">Name: </label><br>
    <input type="text" name="name" id="name"/>
  </div>

  <div class="form">
    <label for="admission_date">Admission Date: </label><br>
    <input type="text" name="admission_date" id="admission_date"/>
  </div>

  <div class="form">
    <label for="type">Type: </label><br>
    <input type="text" name="type" id="type"/>
  </div>

  <div class="form">
    <label for="breed">Breed: </label><br>
    <input type="text" name="breed" id="breed"/>
  </div>

  <div class="form">
    <label for="age">Age: </label><br>
    <input type="number" name="age" id="age"/>
  </div>


<table class="radio">
  <tr>
    <th></th>
    <th>Yes</th>
    <th>No</th>
  </tr>
  <tr>
    <td><label for="child_friendly">Is the animal child friendly? </label></td>
    <td><input type="radio" name="child_friendly" value="true"></td>
    <td><input type="radio" name="child_friendly" value="false"></td>
  </tr>
  <tr>
    <td><label for="needs_outside_space">Does the animal need space outside? </label></td>
    <td><input type="radio" name="needs_outside_space" value="true"></td>
    <td><input type="radio" name="needs_outside_space" value="false"></td>
  </tr>
  <tr>
    <td><label for="needs_exercise">Does the animal like plenty of exercise? </label></td>
    <td><input type="radio" name="needs_exercise" value="true"></td>
    <td><input type="radio" name="needs_exercise" value="false"></td>
  </tr>
</table><br>

<div class="form">
  <label for="profile_pic">Profile picture URL: </label><br>
  <input type="text" name="profile_pic" id="profile_pic"/>
</div>

<div class="form-menu">
  <label>
  Select current owner:
    <select class="form-select" name="owner_id">
      <% for owner in @owners %>
      <option value="<%= owner.id %>"><%= owner.full_name %></option>
      <% end %>
    </select>
  </label>
</div>

<div class="form">
  <label for="status">Status: </label>
  <select class="form-select" name="status" id="status">
    <option value="" selected hidden >Please select current status</option>
    <option value="Available">Available</option>
    <option value="in training">Currently in training</option>
    <option value="in vet care">Currently in vet care</option>
    <option value="Adopted">Adopted</option>
  </select>
</div>




  <div class="form">
    <input type="submit" value="Add animal"/>
  </div>


</form>
