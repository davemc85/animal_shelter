<h1>Animals currently in vet care</h1>

<table class=full_table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Type</th>
    <th>Breed</th>
    <th>Admission Date</th>
    <th>Status</th>
    <th>Current Owner</th>
    <th></th>
  </tr>

    <% @animals.each do |animal| %>
    <tr>
      <td><img style="width: 100px"src="<%= animal.profile_pic %>" ></td>
      <td><%= animal.name %></td>
      <td><%= animal.breed %></td>
      <td><%= animal.type %></td>
      <td><%= animal.admission_date %></td>
      <td><%= animal.status %></td>
      <td><%= animal.owner.full_name %></td>
      <td><a href="/animals/<%= animal.id %>">View <%= animal.name %>'s Profile</a></td>
    </tr>
    <% end %>

</table>
