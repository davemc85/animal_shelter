<h1>Add a new owner</h1>

<form action="/owners" method="post">

  <div class="form">
    <label for="first_name">First Name: </label><br>
    <input type="text" name="first_name" id="first_name" required>
  </div>

  <div class="form">
    <label for="last_name">Last Name: </label><br>
    <input type="text" name="last_name" id="last_name" required>
  </div>

  <div class="form">
    <label for="location">Location: </label><br>
    <input type="text" name="location" id="location" required>
  </div>

  <table>
    <tr>
      <th></th>
      <th>Yes</th>
      <th>No</th>
    </tr>
    <tr>
      <td><label for="has_children">Are they looking for a child friendly pet? </label></td>
      <td><input type="radio" name="has_children" value="true" required></td>
      <td><input type="radio" name="has_children" value="false"></td>
    </tr>
    <tr>
      <td><label for="has_outside_space">Do they have an outdoor area for the animal? </label></td>
      <td><input type="radio" name="has_outside_space" value="true" required></td>
      <td><input type="radio" name="has_outside_space" value="false"></td>
    </tr>
    <tr>
      <td><label for="likes_exercise">Are you looking for a animal that needs attention? </label></td>
      <td><input type="radio" name="likes_exercise" value="true" required></td>
      <td><input type="radio" name="likes_exercise" value="false"></td>
    </tr>
  </table>

  <div class="">
    <input type="submit" value="Add owner"/>
  </div>

</form>
